% insert image as figure
\newcommand{\insertimageasfigure}[2]{
  \begin{figure}[H]
    \centering
    \includegraphics[width=\textwidth]{#1}
    \caption{#2}
    \label{fig:#1}
  \end{figure}}
% same, but with dimensions
\newcommand{\insertimageasfiguredims}[4]{
  \begin{figure}[H]
    \centering
    \includegraphics[width=#2,height=#3,keepaspectratio]{#1}
    \caption{#4}
    \label{fig:#1}
  \end{figure}}

